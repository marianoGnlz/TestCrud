@page
@model TestCrud.Pages.CreateRoleModel
@{
    ViewData["Title"] = "Crear Rol";
    Layout = "_Layout";
}


<div class="row justify-content-center">
    <div class="col-md-4">
        <h1>@ViewData["Title"]</h1>
        <form id="rolForm" method="post">
            <h2>Crear un nuevo rol.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="RoleName" class="form-control" aria-required="true" />
                <label asp-for="RoleName"></label>
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="mt-2">
                <button id="rolSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Crear Rol</button>
            </div>
        </form>
    </div>
</div>